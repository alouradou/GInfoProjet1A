        <section>
            <aside id="leftsidebar" class="sidebar">
                <div class="menu">
                    <ul class="list">
                        <li class="header">Menu</li>
                        <li {% if app.request.pathInfo starts with "/projet_claque" %}class="active"{% endif %}>
                            <a href="{{ path('projet_claque') }}">
                                <i class="material-icons">search</i> <span>Projet Claqué</span>
                            </a>
                        </li>
                        <li {% if app.request.pathInfo starts with "/home" %}class="active"{% endif %}>
                            <a href="{{ path('home') }}" id="link_add">
                                <i class="material-icons">add</i> <span>Home</span>
                            </a>
                        </li>
                    </ul>
                </div>
