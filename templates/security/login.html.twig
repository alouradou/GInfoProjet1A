{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block page_css %}
    <style>
        .btn-my {
            background-color: #3f51b5;
            color: white;
        }
        .btn-my:hover {
            color: white;
        }
        .input-group-addon {
            border: none;
            background-color: transparent;
            padding-left: 0;
            font-weight: 700;
        }
        .form-group {
            display: table !important;
        }
        .btn {
            margin: 0 20px 0 0 !important;
        }
        .error-message {
            color: #d9230f !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="body-wrapper">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
        <h1>Connexion</h1>
        {% if error %}
{#            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
            <small class="error-message">Nom d'utilisateur ou mot de passe incorrects.</small>
        {% endif %}
                </div>
                <div class="body">
                    <form action="{{ path('security_login') }}" method="post">
                        <div class="form-group form-float form-field">
                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                <input required name="_username" type="text" class="form-control">
                                <label class="control-label form-label" required>Adresse email</label>
                            </div>
                        </div>
                        <div class="form-group form-float form-field">
                            <span class="input-group-addon">
                                <i class="material-icons">password</i>
                            </span>
                            <div class="form-line">
                            <input required name="_password" type="password" class="form-control">
                                <label class="control-label form-label" required>Mot de passe</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-addon" style="visibility: hidden;">
                                <i class="material-icons">person</i>
                            </span>
                            <button type="submit" class="btn btn-success waves-green">Se connecter</button>
                            <a class="btn btn-my waves-blue" href="{{ path('security_my_login') }}">Se connecter avec MyCentraleAssos</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}